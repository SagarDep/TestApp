<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_places_info"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stroke" >

     <TextView
         android:id="@+id/place_info_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:text="@string/title"
         android:textAppearance="?android:attr/textAppearanceSmall"
         android:textColor="#3c3c3c"
         android:textStyle="bold"
         />
     
    <TextView
        android:id="@+id/place_info_addr"
        android:text="@string/addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_info_title"
        android:layout_marginTop="-5dp"
        android:textColor="#8e8e8e"
        android:textSize="12sp"
        android:layout_alignParentLeft="true"
        android:textStyle="italic"
        />

   	<ImageView
   	    android:id="@+id/place_info_arrow"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentRight="true"
   	    android:layout_alignParentTop="true"
   	    android:src="@drawable/pink_square_big" />
    
</RelativeLayout>