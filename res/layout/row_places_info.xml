<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_places_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_light_green"
   	>
   	<RelativeLayout 
   	    android:id="@+id/places_info_rl2"
   	    android:layout_width="match_parent"
   	    android:layout_height="match_parent"
   		android:padding="10dp"
	    android:layout_marginTop="1dp"
   	    >
     <TextView
         android:id="@+id/place_info_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:text="@string/title"
         android:textAppearance="?android:attr/textAppearanceSmall"
         android:textColor="@color/main_text_title"
         android:textStyle="bold"
         />

    <TextView
        android:id="@+id/place_info_addr"
        android:text="@string/addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_info_title"
        android:layout_marginTop="-5dp"
        android:textColor="@color/main_text_title"
        android:textSize="12sp"
        android:layout_alignParentLeft="true"
        />

   	<ImageView
   	    android:id="@+id/place_info_arrow"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentRight="true"
   	    android:src="@drawable/right_arrow"
   	    android:layout_centerVertical="true"
   	    />
   	</RelativeLayout>
</RelativeLayout>