<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_contacts_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	>

	<RelativeLayout
	    android:id="@+id/contacts_info_rl2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="@dimen/side_margins"
	    android:layout_marginTop="1dp"
	    android:background="@color/main_light_purple"
	    android:padding="5dp" >
	
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true">
	    <TextView
	        android:id="@+id/contacts_info_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:text="@string/title"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="@color/main_text_title"
	        android:textStyle="bold" />


	    <TextView
	        android:id="@+id/contacts_info_phone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/contacts_info_name"
	        android:layout_below="@+id/contacts_info_name"
	        android:text="@string/addr"
	        android:textColor="@color/main_text_title"
	        android:textSize="12sp" />
	</RelativeLayout>
	
	    <ImageView
	        android:id="@+id/contacts_im"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/icon_dial_2" />
	</RelativeLayout>

</RelativeLayout>